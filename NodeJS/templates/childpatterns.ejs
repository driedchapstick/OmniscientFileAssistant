    <main>
      <div id="recent">
        <h2 id="recentHeader">Flagged Files</h2>
        <section id="recentTable" style="width: 100%">
          <div class="heading-card">File Name</div>
          <div class="heading-card">File Path</div>
          <div class="heading-card">File Extension</div>
          <div class="heading-card">Computer Name</div>
          <div class="heading-card">File Creator</div>
          <div class="heading-card">Date Created</div>
          <div class="heading-card">Date Modified</div>
          <div class="heading-card">FileSize</div>
          <div class="heading-card">Download</div>
          <% for(var i=0; i < data.length; i++) { %> <%= data[i].id %>
          <div class="card">
            <div class="data"><%= data[i].FileName %></div>
          </div>
          <div class="card">
            <div class="data"><%= data[i].FilePath %></div>
          </div>
          <div class="card"><div class="data"><%= data[i].FileExt %></div></div>
          <div class="card">
            <div class="data"><%= data[i].CompName %></div>
          </div>
          <div class="card">
            <div class="data"><%= data[i].FileCreator %></div>
          </div>
          <div class="card">
            <div class="data"><%= data[i].FileCreated %></div>
          </div>
          <div class="card">
            <div class="data"><%= data[i].FileModified %></div>
          </div>
          <div class="card">
            <div class="data"><%= data[i].FileSize %></div>
          </div>
          <div class="card">
            <div class="data">
              <form class="TheForm" action="" method="POST">
                <input type="hidden" name="FileOnServer" value="<%= data[i].CompName %>-<%= data[i].FileName %>" id="ThePath"/>
                <input type="submit" name="DownloadButton" value="Download" id="TheButton"/>
              </form>
            </div>
          </div>
          <% } %>
        </section>
      </div>
    </main>
    <script>
      $(document).ready(function(){
        window.onload=function(){
          if(document.getElementById("ThePath").getAttribute("value") == "-" || document.getElementById("ThePath").getAttribute("value") == ""){
            document.getElementById("TheButton").setAttribute("style", "display:none;");
          };
        };
      });
